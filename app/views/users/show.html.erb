<div class="target-wrapper">
  <div class="plan-area">
    <div class="plan-top-logo">My Plan</div>
      <% unless @user.target.present? %>
        <%= link_to "目標を設定する", new_target_path %>
        <div class="new-plan-areat">目標を設定してください</div>
      <% else %>
        <%= link_to "目標を修正する", edit_target_path(@user.target) %>
        <div class="plan-form">
          <div class="goal-weight">
            <h1 class="plan-list">目標体重</h1>
            <div class="plan-output"><%= @user.target.goal_weight %> kg</div>
          </div>
          <div class="period">
            <h1 class="plan-list">期間</h1>
            <div class="plan-output"><%= @user.target.period.name %></div>
          </div>
          <div class="plan">
            <h1 class="plan-list">計画</h1>
            <div class="plan-output"><%= @user.target.plan %></div>
          </div>
        <% end %>
        <%= link_to "トップページへ戻る", root_path %>
      </div>
  </div>
</div>
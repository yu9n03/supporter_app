  <div class="chat-message-form">
    <div class="chat-message-area"> 
      <input class="form-message" placeholder= "テキストを入力してください">
    </div>
    <div class="chat-submit-content">
          <input class="chat-submit-btn" type="submit" value="送信">
    </div>
  </div>

  <%#予約機能エリア%>
    <div class="reservation-top">
      面談予約
    </div>
  <div class="reservations-contents">
    <div class="reserved-date">
      面談予約済みの日時：  2021-07-16  13:00
    </div>
    <div class="reservation-bottom">
      <div class="reservation-input-form">

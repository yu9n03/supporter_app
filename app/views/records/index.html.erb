<%#ヘッダー%>
<header class="header">
  <div class="inner">
    <div class="nav">
      <div class="nav__left">
        <%= link_to image_tag("logo.png", class: :header_logo), root_path %>
      </div>
      <% if user_signed_in? %>
         <div class="nav__right">
          <%= link_to current_user.nickname, edit_user_registration_path, class: :nav__nickname %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav__logout %>
        </div>
      <% end %>
    </div>
  </div>
</header>
<%#インプットエリア%>
<%= form_with model: @record, url: records_path, local: true do |f| %>
<div class="main-wrapper">
  <div class="input-contents">
    <div class="form-top">
      <p class="input-message">入力してください</p>
    </div>
    <div class="form-middle">
      <div class="form-content">
        <p class="input-list">日付</p>
        <div class="input-area">
           <%= f.date_select :input_day %>
        </div>
      </div>
      <div class="form-content">
        <p class="input-list">体重</p>
        <div class="input-area">
        <%= f.text_field :weight, class:"input-weight", id:"weight", placeholder:"例) 80.25", maxlength:"5" %>
        kg
        </div>
      </div>
      <div class="form-content">
        <p class="input-list">体脂肪率</p>
        <div class="input-area">
        <%= f.text_field :body_fat, class:"input-body-fat", id:"boby_fat", placeholder:"例) 22.55", maxlength:"5" %>
        %</div>
      </div>
      <div class="form-content">
        <p class="input-list">Plan達成度</p>
        <div class="input-area">
          <%= f.select :assessment_id, [ ["○",1], ["△",2], ["×",3] ], prompt: "達成度を選択" %>
        </div>
      </div>
    </div>
    <div class="form-bottom">
      <div class="memo-contents">
        <p class="memo-list">メモ</p>
        <div class="memo-area">
          <%= f.text_area :memo, class:"form-memo", id:"memo", placeholder:"３０文字以内で入力してください", maxlength:"30" %>
        </div>
      </div>
      <div class="contents-submit-content">
        <%= f.submit "SEND" ,class:"contents-submit-btn" %>
      </div>
    </div>
  </div>
  <% end %>
<%#グラフエリア%>
  <div class="output-contents">
    グラフエリア
    <%= link_to "プランを確認", user_path(current_user) %>
  </div>

<%#メッセージエリア%>

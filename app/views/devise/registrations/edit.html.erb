<div class="wrapper">
  <%# 左サイドコンテンツ%>
  <div class="left-side">
    <%= image_tag("logo.png", class: :logo) %>
    <%= image_tag("top.jpg", class: :top_img)%>
  </div>

  <%# 右サイドコンテンツ%>
  <div class="right-side">
    <%= link_to "MYページへ戻る", root_path, class: :back_page %>
    <h2 class="edit-top">Edit <%= resource_name.to_s.humanize %></h2>
  
    <div class="edit-form-contents">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="edit-field">
          <%= f.label :ニックネーム, class: :field_label %><br />
          <%= f.text_field :nickname, autofocus: true, class: :edit_text_field %>
        </div>

        <div class="edit-field">
          <%= f.label :email, class: :field_label %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: :edit_text_field %>
        </div>
      
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      
        <div class="edit-field">
          <%= f.label :New_password, class: :field_label %> <br /><i>(Passwordを変更しない場合は空欄)</i>
          <%= f.password_field :password, autocomplete: "new-password", class: :edit_text_field %>
        </div>
      
        <div class="edit-field">
          <%= f.label :password_confirmation, class: :field_label %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: :edit_text_field %>
        </div>
      
        <div class="edit-field">
          <%= f.label :現在のPassword, class: :field_label %> <i>(必須)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: :edit_text_field %>
        </div>

        <div class="edit-field">
          <%= f.label :年齢, class: :field_label %><br />
          <%= f.text_field :age, autofocus: true, maxlength:"2", class: :edit_text_field %>
        </div>
    
        <div class="edit-field">
          <%= f.label :身長, class: :field_label %><br />
          <%= f.text_field :height, autofocus: true, maxlength:"5", class: :edit_text_field %>
        </div>
    
        <div class="edit-field">
          <%= f.label :現在の体重, class: :field_label %><br />
          <%= f.text_field :basis_weight, autofocus: true, maxlength:"6", class: :edit_text_field %>
        </div>
      
        <div class="edit-actions">
          <%= f.submit "Update", class: :edit_btn %>
        </div>
      <% end %>
      
      <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: :delete_btn %>
    </div>
  </div>
</div>

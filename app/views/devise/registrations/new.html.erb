<div class="wrapper">
  <%# 左サイドコンテンツ%>
  <div class="left-side">
    <%= image_tag("logo.png", class: :logo) %>
    <%= image_tag("top.jpg", class: :top_img)%>
  </div>

<%# 右サイドコンテンツ%>
  <div class="right-side">
    <h2 class="log-in-top">New Acount</h2>
    <div class="form-contents">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      
      <div class="error-contents">
        <%= render "devise/shared/error_messages", resource: resource, class: :error_messages %>
      </div>
      
      <div class="sign-up-field">
        <%= f.label :ニックネーム, class: :field_label %><br />
        <%= f.text_field :nickname, autofocus: true, class: :text_field %>
      </div>
    
      <div class="sign-up-field">
        <%= f.label :email, class: :field_label %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: :text_field %>
      </div>
    
      <div class="sign-up-field">
        <%= f.label :password, class: :field_label %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: :text_field %>
      </div>
    
      <div class="sign-up-field">
        <%= f.label :password（再入力）, class: :field_label %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: :text_field %>
      </div>
    
      <div class="sign-up-field">
        <%= f.label :年齢, class: :field_label %><br />
        <%= f.text_field :age, placeholder: "例）42(半角数字)", autofocus: true, class: :text_field %>
      </div>
    
      <div class="sign-up-field">
        <%= f.label :身長, class: :field_label %><br />
        <%= f.text_field :height, placeholder: "例）176.2(半角数字)", autofocus: true, class: :text_field %>
      </div>
    
      <div class="sign-up-field">
        <%= f.label :現在の体重, class: :field_label %><br />
        <%= f.text_field :basis_weight, placeholder: "例）78.25(半角数字)", autofocus: true, class: :text_field %>
      </div>
    
      <div class="sign-up-actions">
        <%= f.submit "Sign up", class: :sign_up_btn %>
      </div>
      <% end %>

      <%= link_to "ログインはこちら", new_user_session_path %>
    </div>
  </div>
</div>
